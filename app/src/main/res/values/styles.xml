<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#0000FF</item>
    </style>


    <style name="TitleTextView" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_title</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="ButtonStyle" parent="android:ButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonStyle.Alternative">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_buttons</item>
        <item name="android:layout_marginTop">@dimen/margin_buttons</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle.Alternative.Land">
        <item name="android:layout_marginRight">@dimen/margin_buttons</item>
    </style>

    <!-- Court Counter Theme -->
    <style name="CourtCounterTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
    </style>

    <!-- Court Counter Styles -->
    <style name="CourtCounter_TexView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_textview_courtcounter</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding_textview_courtcounter</item>
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">@dimen/textsize_textview_courtcounter</item>
    </style>

    <style name="CourtCounter_TexView.Points">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/textsize_point_textview</item>
    </style>

    <style name="ButtonThrow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/marginbottom_throw_button</item>
        <item name="android:layout_marginRight">@dimen/margin_throw_button</item>
        <item name="android:layout_marginLeft">@dimen/margin_throw_button</item>
    </style>

    <style name="ResetPointsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Calculator Styles -->
    <style name="Calculator_Result" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textsize_calculator_result_textview</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">@dimen/padding_result_calculator</item>
        <item name="android:background">@color/whiteCalculator</item>
    </style>

    <style name="Calculator_Result.Temporal">
        <item name="android:textSize">@dimen/textsize_calculator_result_temporal_textview</item>
    </style>

    <style name="Calculator_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/whiteCalculator</item>
        <item name="android:textSize">@dimen/textsize_calculator_buttons</item>
    </style>

    <style name="Row_Calculator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding_row</item>
    </style>

    <style name="Calculator_Operator_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/yellowCalculator</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textsize_calculator_buttons</item>
    </style>

</resources>
