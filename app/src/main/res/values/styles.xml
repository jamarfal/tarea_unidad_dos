<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="TitleTextView" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_title</item>
        <item name="android:gravity">center</item>

    </style>


    <style name="ButtonStyle" parent="android:ButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonStyle.Alternative">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_buttons</item>
        <item name="android:layout_marginTop">@dimen/margin_buttons</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle.Alternative.Land">
        <item name="android:layout_marginRight">@dimen/margin_buttons</item>
    </style>

</resources>
